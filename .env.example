# === Configuration existante ===
# Hosts pour Traefik
GITLAB_HOST=gitlab.local
JENKINS_HOST=jenkins.local
REGISTRY_HOST=registry.local

# === Configuration MinIO ===
# Credentials administrateur MinIO
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeMeStrong!

# Clés d'accès pour les applications (créées via console MinIO)
MINIO_ACCESS_KEY=minio-ci-ak
MINIO_SECRET_KEY=minio-ci-sk

# Hosts pour l'API et la console MinIO
MINIO_API_HOST=minio.local
MINIO_CONSOLE_HOST=minio-console.local

# Bucket pour les sauvegardes
MINIO_BACKUP_BUCKET=backups

# === Configuration Restic ===
# La passphrase Restic ne doit PAS être stockée ici
# Utiliser Jenkins Credentials (secret file) à la place
RESTIC_PASSWORD_PLACEHOLDER=use-jenkins-credentials

# === Configuration Pushgateway ===
PUSHGATEWAY_HOST=push.local

# === Configuration optionnelle ===
# Nom d'hôte pour identifier les sauvegardes
BACKUP_HOSTNAME=workflow-prod-01

# URL Pushgateway pour les métriques (utilisée dans les scripts)
PUSHGATEWAY_URL=http://push.local
